{
	"name": "@flowr/petal",
	"type": "module",
	"version": "2.2.1",
	"description": "Lightweight tooling suite for TS/JS libraries",
	"license": "Apache-2.0",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "core/petal"
	},
	"main": "./build/index.js",
	"module": "./build/index.js",
	"types": "./types/index.d.ts",
	"bin": {
		"petal": "./bin/petal.js"
	},
	"files": [
		"CHANGELOG.md",
		"LICENSE",
		"README.md",
		"bin/**/*.js",
		"build/**/*.js",
		"config/**/*",
		"types/**/*.d.ts"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"clean": "rimraf build types",
		"build": "node ./bin/petal.js build",
		"test": "node ./bin/petal.js test",
		"lint": "node ./bin/petal.js lint",
		"bootstrap": "pnpm run clean && tsc --allowJs --outDir build --noEmit false",
		"prepublishOnly": "pnpm run bootstrap && pnpm run build"
	},
	"dependencies": {
		"@flowr/eslint-config": "workspace:^",
		"@flowr/petal-utils": "workspace:^",
		"@flowr/tsconfig": "workspace:^",
		"@rollup/plugin-commonjs": "^25.0.7",
		"@rollup/plugin-json": "^6.1.0",
		"@rollup/plugin-node-resolve": "^15.2.3",
		"@rollup/plugin-yaml": "^4.1.2",
		"@swc/core": "^1.4.8",
		"@swc/helpers": "^0.5.6",
		"@types/debug": "^4.1.10",
		"@types/react": "^18.2.66",
		"chalk": "^5.3.0",
		"commander": "^12.0.0",
		"consola": "^3.2.3",
		"debug": "^4.3.4",
		"esbuild": "^0.20.2",
		"esbuild-loader": "^4.1.0",
		"eslint": "^8.57.0",
		"execa": "^8.0.1",
		"fs-extra": "^11.2.0",
		"jscodeshift": "^0.15.2",
		"jscodeshift-add-imports": "^1.0.10",
		"simple-git-hooks": "^2.10.0",
		"typescript": "^5.3.3",
		"unbuild": "^2.0.0",
		"vitest": "^1.4.0",
		"yaml": "^2.4.1"
	},
	"devDependencies": {
		"@types/fs-extra": "^11.0.4",
		"@types/jscodeshift": "^0.11.10",
		"@types/node": "^20.11.28",
		"object.fromentries": "^2.0.7",
		"rimraf": "^5.0.5",
		"tempy": "^3.1.0"
	},
	"publishConfig": {
		"access": "public"
	}
}
