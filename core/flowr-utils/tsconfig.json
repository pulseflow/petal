{
	"extends": "@flowr/tsconfig",
	"compilerOptions": {
		"jsx": "preserve",
		"baseUrl": ".",
		"module": "NodeNext",
		"paths": {
			"~/*": ["./src/*"],
			"~core/*": ["./src/core/*"],
			"~debug/*": ["./src/debug/*"],
			"~error/*": ["./src/error/*"],
			"~inject/*": ["./src/inject/*"],
			"~mixin/*": ["./src/mixin/*"],
			"~req/*": ["src/inject/fetch/*"]
		},
		"declaration": false,
		"noEmit": true,
		"sourceMap": false,
		"isolatedModules": false
	},
	"include": ["src"],
	"exclude": ["test"]
}
