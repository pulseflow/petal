			"require": "./dist/error.cjs"
		},
		"./debug": {
			"import": "./dist/debug.mjs",
			"require": "./dist/debug.cjs"
		},
		"./core": {
			"import": "./dist/core.mjs",
			"require": "./dist/core.cjs"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"LICENSE*",
		"README.md",
		"dist/**/*.cjs",
		"dist/**/*.d.cts",
