{
	"name": "@flowr/utils",
	"type": "module",
	"version": "3.1.0",
	"description": "Opinionated collection of common TypeScript utilities",
	"license": "Apache-2.0",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "packages/utils"
	},
	"bugs": {
		"url": "https://github.com/pulseflow/petal/issues"
	},
	"keywords": [
		"utils",
		"flowr",
		"petal"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.cjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"CHANGELOG.md",
		"LICENSE",
		"README.md",
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"dist/**/*.mjs"
	],
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"clean": "rimraf dist",
		"build": "unbuild",
		"stub": "unbuild --stub"
	},
	"dependencies": {
		"@catppuccin/palette": "^1.1.1",
		"chalk": "^5.3.0",
		"log-update": "^6.0.0",
		"luxon": "^3.4.4",
		"semver": "^7.6.1",
		"serialize-error": "^11.0.3",
		"sisteransi": "^1.0.5",
		"tinycolor2": "^1.6.0",
		"tweetnacl": "^1.0.3"
	},
	"devDependencies": {
		"@flowr/tsconfig": "workspace:^",
		"@types/luxon": "^3.4.2",
		"@types/tinycolor2": "^1.4.6",
		"@types/zen-observable": "^0.8.7",
		"p-limit": "^5.0.0",
		"throttle-debounce": "^5.0.0",
