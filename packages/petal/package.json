{
	"name": "@flowr/petal",
	"version": "1.0.1",
	"license": "Apache-2.0",
	"description": "Lightweight tooling suite for TS/JS libraries",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "packages/petal"
	},
	"main": "cjs/index.js",
	"module": "esm/index.js",
	"types": "types",
	"bin": {
		"petal": "./bin/petal"
	},
	"files": [
		"bin",
		"cjs",
		"config",
		"esm",
		"types"
	],
	"scripts": {
		"clean": "rimraf cjs esm types",
		"build": "node ./bin/petal build",
		"test": "node ./bin/petal test",
		"lint": "node ./bin/petal lint",
		"format": "node ./bin/petal format",
		"bootstrap": "pnpm run clean && tsc --allowJs --outDir cjs --noEmit false --module CommonJS",
		"prepublishOnly": "pnpm run bootstrap && pnpm run build"
	},
	"dependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@flowr/eslint-config": "workspace:*",
		"@flowr/petal-utils": "workspace:*",
		"@flowr/prettier-config": "workspace:*",
		"@flowr/tsconfig": "workspace:*",
		"@types/cross-spawn": "^6.0.2",
		"@types/debug": "^4.1.8",
		"@types/jest": "^29.5.4",
		"@types/react": "^18.2.21",
		"commander": "^11.0.0",
		"commitizen": "^4.2.6",
		"cross-spawn-promise": "^0.10.1",
		"cz-conventional-changelog": "^3.3.0",
		"debug": "^4.3.4",
		"eslint": "^8.48.0",
		"jest": "^29.6.4",
		"jest-junit": "^16.0.0",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.3",
		"semantic-release": "^21.1.1",
		"ts-jest": "^29.1.1",
		"typescript": "^5.2.2"
	},
	"devDependencies": {
		"@types/rimraf": "^3.0.0",
		"@types/node": "^18.0.0",
		"object.fromentries": "^2.0.7",
		"rimraf": "^3.0.0",
		"tempy": "^1.0.1"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	}
}
