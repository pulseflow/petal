{
	"name": "@flowr/petal-utils",
	"version": "2.1.0",
	"description": "Package that contains shared utils within Petal projects",
	"license": "Apache-2.0",
	"homepage": "https://petal.dyn.gay",
	"funding": "https://ko-fi.com/pauliesnug",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/pastel.git",
		"directory": "packages/petal-utils"
	},
	"main": "build/index.js",
	"module": "build/index.js",
	"type": "module",
	"types": "./types/index.d.ts",
	"files": [
		"build",
		"types"
	],
	"scripts": {
		"clean": "rimraf build types",
		"build": "petal build",
		"test": "petal test",
		"lint": "petal lint --stylecheck",
		"format": "petal format",
		"bootstrap": "pnpm run clean && tsc --declaration --isolatedModules false --outDir types --emitDeclarationOnly --noEmit false && tsc --allowJs --outDir build --noEmit false",
		"prepublishOnly": "pnpm run bootstrap && pnpm run build"
	},
	"dependencies": {
		"@manypkg/get-packages": "^2.2.0",
		"@pnpm/lockfile-file": "^8.1.4",
		"@pnpm/lockfile-types": "^5.1.3",
		"@pnpm/lockfile-utils": "^8.0.7",
		"@pnpm/lockfile-walker": "^7.0.6",
		"fs-extra": "^11.1.1",
		"semver": "^7.5.4",
		"zod": "^3.22.4",
		"glob": "^8.0.3",
		"luxon": "^3.4.3",
		"read-pkg-up": "^10.1.0",
		"serialize-error": "^8.0.1"
	},
	"devDependencies": {
		"@flowr/tsconfig": "workspace:*",
		"@types/glob": "^8.0.3",
		"@types/jest": "^29.5.6",
		"@types/node": "^18.0.0",
		"@types/zen-observable": "^0.8.5",
		"@types/luxon": "^3.3.3",
		"mock-fs": "^5.2.0",
		"zen-observable": "^0.10.0",
		"rimraf": "^5.0.5"
	},
	"publishConfig": {
		"access": "public"
	},
	"engines": {
		"node": ">=18"
	}
}
