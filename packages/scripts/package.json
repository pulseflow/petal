{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@flowr/scripts",
	"type": "module",
	"version": "5.2.0",
	"private": true,
	"description": "A set of scripts that we use for Petal workflows",
	"author": "@flowr",
	"contributors": [
		"Pauline <me@dyn.gay>"
	],
	"license": "(LicenseRef-OQL-1.2 OR MIT OR Apache-2.0)",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "packages/scripts"
	},
	"bugs": "https://github.com/pulseflow/petal/issues",
	"sideEffects": false,
	"exports": {
		".": {
			"import": {
				"types": "./dist/esm/index.d.ts",
				"default": "./dist/esm/index.js"
			},
			"require": {
				"types": "./dist/cjs/index.d.cts",
				"default": "./dist/cjs/index.cjs"
			}
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"bin": {},
	"directories": {
		"bin": "bin",
		"lib": "src",
		"example": "turbo"
	},
	"files": [
		"LICENSE*",
		"README.md",
		"bin/**/*.js",
		"dist/**/*.cjs",
		"dist/**/*.d.cts",
		"dist/**/*.d.mts",
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"dist/**/*.mjs"
	],
	"engines": {
		"node": ">=22"
	},
	"dependencies": {
		"@actions/glob": "^0.5.0",
		"commander": "^13.1.0",
		"tslib": "^2.8.1",
		"undici": "^7.3.0",
		"yaml": "^2.7.0"
	},
	"devDependencies": {
		"@turbo/gen": "^2.4.2"
	}
}
