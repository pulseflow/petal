{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "@flowr/typescript",
	"type": "module",
	"version": "4.4.1",
	"description": "Common TSConfigs and TypeScript in Petal standardized projects",
	"author": "@flowr",
	"contributors": [
		"Pauline <git@ethanlibs.co>"
	],
	"license": "(LicenseRef-OQL-1.2 OR MIT OR Apache-2.0)",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "packages/typescript"
	},
	"bugs": "https://github.com/pulseflow/petal/issues",
	"keywords": [
		"@flowr/typescript",
		"config",
		"tsconfig",
		"tsconfigs",
		"typescript",
		"petal",
		"flowr"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./src/tsconfig.json",
			"import": "./src/tsconfig.json",
			"require": "./src/tsconfig.json"
		},
		"./base": {
			"types": "./src/tsconfig.json",
			"import": "./src/tsconfig.json",
			"require": "./src/tsconfig.json"
		},
		"./decorators": {
			"types": "./src/decorators.json",
			"import": "./src/decorators.json",
			"require": "./src/decorators.json"
		},
		"./strict": {
			"types": "./src/strict.json",
			"import": "./src/strict.json",
			"require": "./src/strict.json"
		},
		"./node": {
			"types": "./src/node.json",
			"import": "./src/node.json",
			"require": "./src/node.json"
		},
		"./dom": {
			"types": "./src/dom.json",
			"import": "./src/dom.json",
			"require": "./src/dom.json"
		},
		"./package.json": "./package.json"
	},
	"main": "src/tsconfig.json",
	"files": [
		"LICENSE*",
		"README.md",
		"src/**/*.json"
	],
	"engines": {
		"node": ">=20"
	},
	"peerDependencies": {
		"typescript": ">=5"
	},
	"devDependencies": {
		"@vitest/coverage-v8": "^2.1.8",
		"typescript": "^5.7.2",
		"vitest": "^2.1.8"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	}
}
