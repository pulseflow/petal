{
	"name": "eslint-plugin-petal",
	"type": "module",
	"version": "3.7.0",
	"description": "Custom ESLint rules for the Petal specification",
	"license": "Apache-2.0",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal",
		"directory": "packages/eslint-plugin"
	},
	"bugs": {
		"url": "https://github.com/pulseflow/petal/issues"
	},
	"keywords": [
		"eslint",
		"eslint-plugin",
		"react",
		"typescript"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"CHANGELOG.md",
		"LICENSE",
		"README.md",
		"dist/**/*.cjs",
		"dist/**/*.d.cts",
		"dist/**/*.d.mts",
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"dist/**/*.mjs"
	],
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"start": "tsx src/index.ts",
		"build": "unbuild",
		"stub": "unbuild --stub"
	},
	"peerDependencies": {
		"eslint": "*"
	},
	"dependencies": {
		"@flowr/utils": "workspace:^"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.10",
		"@typescript-eslint/typescript-estree": "^7.14.1",
		"@typescript-eslint/utils": "^7.14.1",
		"eslint": "9.4.0",
		"eslint-vitest-rule-tester": "^0.3.2",
		"jsonc-eslint-parser": "^2.4.0",
		"typescript": "^5.5.2"
	},
	"publishConfig": {
		"access": "public"
	}
}
