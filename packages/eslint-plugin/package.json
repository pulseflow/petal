{
	"$schema": "https://json.schemastore.org/package.json",
	"name": "eslint-plugin-petal",
	"type": "module",
	"version": "6.0.0",
	"description": "Custom ESLint rules for the Petal specification",
	"author": "@flowr",
	"contributors": [
		"Pauline <me@dyn.gay>"
	],
	"license": "(LicenseRef-OQL-1.2 OR MIT OR Apache-2.0)",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal",
		"directory": "packages/eslint-plugin"
	},
	"bugs": "https://github.com/pulseflow/petal/issues",
	"keywords": [
		"eslint",
		"eslint-plugin",
		"eslint-plugin-petal",
		"react",
		"typescript",
		"flowr",
		"petal"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/esm/index.d.ts",
			"default": "./dist/esm/index.js"
		},
		"./package.json": "./package.json"
	},
	"main": "./dist/esm/index.js",
	"module": "./dist/esm/index.js",
	"types": "./dist/esm/index.d.ts",
	"files": [
		"LICENSE*",
		"README.md",
		"dist/**/*.d.mts",
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"dist/**/*.mjs"
	],
	"engines": {
		"node": ">=22"
	},
	"scripts": {
		"start": "tsx src/index.ts",
		"build": "tsup"
	},
	"peerDependencies": {
		"eslint": "^9.20.0"
	},
	"dependencies": {
		"@flowr/utilities": "workspace:^"
	},
	"devDependencies": {
		"@typescript-eslint/parser": "^8.24.0",
		"@typescript-eslint/utils": "^8.24.0",
		"eslint": "^9.20.1",
		"eslint-vitest-rule-tester": "^1.1.0",
		"jsonc-eslint-parser": "^2.4.0"
	},
	"publishConfig": {
		"access": "public",
		"provenance": true
	}
}
