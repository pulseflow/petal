{
	"name": "eslint-plugin-petal",
	"type": "module",
	"version": "3.0.0",
	"description": "Set of rules for Petal's custom ESLint rules",
	"license": "Apache-2.0",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal",
		"directory": "packages/eslint-plugin"
	},
	"bugs": {
		"url": "https://github.com/pulseflow/petal/issues"
	},
	"keywords": [
		"eslint",
		"eslint-plugin",
		"react",
		"typescript"
	],
	"sideEffects": false,
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs",
			"require": "./dist/index.cjs"
		}
	},
	"main": "./dist/index.mjs",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"files": [
		"CHANGELOG.md",
		"LICENSE",
		"README.md",
		"dist/**/*.cjs",
		"dist/**/*.d.ts",
		"dist/**/*.js",
		"dist/**/*.mjs"
	],
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"start": "tsx src/index.ts",
		"build": "unbuild",
		"stub": "unbuild --stub",
		"test": "vitest",
		"clean": "rimraf dist"
	},
	"peerDependencies": {
		"eslint": "*"
	},
	"devDependencies": {
		"@flowr/tsconfig": "workspace:^",
		"@types/eslint": "^8.56.10",
		"@types/lodash.merge": "^4.6.9",
		"@types/semver": "^7.5.8",
		"@typescript-eslint/rule-tester": "^7.7.1",
		"@typescript-eslint/typescript-estree": "^7.7.1",
		"@typescript-eslint/utils": "^7.7.1",
		"ajv": "^6.10.0",
		"eslint": "8.56.0",
		"eslint-define-config": "^2.1.0",
		"lodash.merge": "^4.6.2",
		"typescript": "^5.3.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
