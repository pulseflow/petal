{
	"$schema": "https://json.schemastore.org/tsconfig.json",
	"extends": "./packages/typescript/src/tsconfig.json",
	"compilerOptions": {
		"incremental": false,
		"lib": ["ESNext", "ESNext.Disposable", "DOM"],
		"types": ["vitest/globals", "node", "vite/client"],
		"noEmit": true,
		"verbatimModuleSyntax": true
	},
	"exclude": [
		"**/vendor/**",
		"**/node_modules/**",
		"**/dist/**",
		"**/build/**",
		"**/fixtures/**",
		"**/.fixtures/**",
		"**/_fixtures/**",
		"**/bin/**",
		"**/.turbo/**"
	]
}
