{
	"extends": "@flowr/tsconfig/tsconfig.strict.json",
	"compilerOptions": {
		"types": ["vitest/globals", "node", "vite/client"],
		"exactOptionalPropertyTypes": false,
		"noPropertyAccessFromIndexSignature": false,
		"removeComments": false,
		"skipDefaultLibCheck": true,
		"skipLibCheck": true
	},
	"exclude": [
		"**/vendor/**",
		"**/node_modules/**",
		"**/examples/**",
		"**/dist/**",
		"**/build/**",
		"**/fixtures/**",
		"**/.fixtures/**",
		"**/_fixtures/**"
	]
}
