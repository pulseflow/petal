{
	"name": "@flowr/petal-monorepo",
	"type": "module",
	"private": true,
	"packageManager": "pnpm@9.0.6",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "/"
	},
	"scripts": {
		"test": "vitest",
		"test:update": "vitest -u",
		"test:ci": "pnpm build && pnpm lint && pnpm test",
		"typegen": "pnpm --filter @flowr/eslint-config typegen",
		"build": "pnpm typegen && pnpm --filter=./packages/* run build",
		"clean": "pnpm --filter=./packages/* run clean",
		"stub": "pnpm typegen && pnpm --filter=./packages/* run stub",
		"lint": "pnpm eslint --cache .",
		"release": "bumpp -r",
		"lint:fix": "pnpm lint --fix",
		"dev": "pnpm stub"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"@flowr/eslint-config": "workspace:^",
		"@flowr/tsconfig": "workspace:^",
		"@stylistic/eslint-plugin-migrate": "^1.7.2",
		"@types/node": "^20.12.7",
		"bumpp": "^9.4.0",
		"esno": "^4.7.0",
		"rimraf": "^5.0.5",
		"rollup": "^4.16.4",
		"semver": "^7.6.0",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5",
		"unbuild": "^2.0.0",
		"vitest": "^1.5.2"
	}
}
