{
	"name": "@flowr/petal-monorepo",
	"type": "module",
	"version": "3.0.0",
	"private": true,
	"packageManager": "pnpm@9.0.6",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "/"
	},
	"scripts": {
		"test": "vitest",
		"test:update": "vitest -u",
		"test:ci": "pnpm build && pnpm lint && pnpm test",
		"build": "pnpm --filter=./packages/* run build",
		"clean": "pnpm --filter=./packages/* run clean",
		"stub": "pnpm --filter=./packages/* run stub",
		"lint": "pnpm eslint --cache .",
		"release": "bumpp -r",
		"lint:fix": "pnpm lint --fix",
		"dev": "pnpm stub"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"@flowr/eslint-config": "workspace:^",
		"@flowr/tsconfig": "workspace:^",
		"@stylistic/eslint-plugin-migrate": "^1.7.2",
		"@types/node": "^20.12.7",
		"bumpp": "^9.4.0",
		"bundle-require": "^4.0.3",
		"esbuild": "^0.20.2",
		"esno": "^4.7.0",
		"rimraf": "^5.0.5",
		"rollup": "^4.17.0",
		"semver": "^7.6.0",
		"tsup": "^8.0.2",
		"typescript": "^5.4.5",
		"unbuild": "^2.0.0",
		"vite": "^5.2.10",
		"vitest": "^1.5.2"
	}
}
