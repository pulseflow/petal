{
	"name": "@flowr/petal-monorepo",
	"type": "module",
	"version": "3.8.5",
	"private": true,
	"packageManager": "pnpm@9.5.0",
	"author": "Petal Contributors",
	"license": "MIT",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "/"
	},
	"bugs": "https://github.com/pulseflow/petal/issues",
	"sideEffects": false,
	"engines": {
		"node": ">=20"
	},
	"scripts": {
		"test": "vitest run",
		"test:update": "vitest -u",
		"test:ui": "vitest --ui",
		"test:ci": "pnpm build && pnpm lint && pnpm test",
		"build": "pnpm --filter=./packages/* run build",
		"stub": "pnpm --filter=./packages/* run stub",
		"lint": "pnpm eslint --cache .",
		"release": "bumpp -r",
		"lint:fix": "pnpm lint --fix",
		"dev": "pnpm stub"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"@flowr/eslint-config": "workspace:^",
		"@flowr/tsconfig": "workspace:^",
		"@stylistic/eslint-plugin-migrate": "^2.3.0",
		"@types/node": "^20.14.10",
		"bumpp": "^9.4.1",
		"esbuild": "^0.23.0",
		"eslint": "npm:eslint-ts-patch@9.5.0-0",
		"eslint-ts-patch": "9.5.0-0",
		"tsup": "^8.1.0",
		"tsx": "~4.16.2",
		"typescript": "^5.5.3",
		"unbuild": "^2.0.0",
		"vite": "^5.3.3",
		"vitest": "^2.0.1"
	},
	"resolutions": {
		"tsx": "~4.16.2"
	}
}
