{
	"name": "@flowr/petal-monorepo",
	"type": "module",
	"version": "3.5.2",
	"private": true,
	"packageManager": "pnpm@9.2.0",
	"license": "Apache-2.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal.git",
		"directory": "/"
	},
	"scripts": {
		"test": "vitest run",
		"test:update": "vitest -u",
		"test:ui": "vitest --ui",
		"test:ci": "pnpm build && pnpm lint && pnpm test",
		"build": "pnpm --filter=./packages/* run build",
		"stub": "pnpm --filter=./packages/* run stub",
		"lint": "pnpm eslint --cache .",
		"release": "bumpp -r",
		"lint:fix": "pnpm lint --fix",
		"dev": "pnpm stub"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"devDependencies": {
		"@flowr/eslint-config": "workspace:^",
		"@flowr/tsconfig": "workspace:^",
		"@stylistic/eslint-plugin": "^2.1.0",
		"@stylistic/eslint-plugin-migrate": "^2.1.0",
		"@types/node": "^20.14.1",
		"bumpp": "^9.4.1",
		"esbuild": "^0.21.4",
		"eslint": "npm:eslint-ts-patch@9.4.0-0",
		"eslint-ts-patch": "9.4.0-0",
		"esno": "^4.7.0",
		"rimraf": "^5.0.7",
		"rollup": "^4.18.0",
		"tsup": "^8.1.0",
		"typescript": "^5.4.5",
		"unbuild": "^2.0.0",
		"vite": "^5.2.12",
		"vitest": "^1.6.0"
	}
}
