{
	"extends": "@flowr/petal/config/tsconfig.json",
	"include": ["src"],
	"compilerOptions": {
		"types": ["jest", "node"],
		"isolatedModules": false,
		"noEmit": true,
		"jsx": "preserve",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"noUnusedLocals": false,
		"noUnusedParameters": false,
        "resolveJsonModule": true,
	}
}
