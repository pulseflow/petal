{
	"extends": "@flowr/petal/config/tsconfig.json",
	"compilerOptions": {
		"jsx": "preserve",
		"module": "NodeNext",
		"moduleResolution": "NodeNext",
		"resolveJsonModule": true,
		"types": ["node"],
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"noEmit": true,
		"isolatedModules": false,
		"skipDefaultLibCheck": true,
    	"skipLibCheck": true
	},
	"include": ["src"]
}
