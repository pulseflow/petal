{
	"name": "eslint-plugin-petal",
	"type": "module",
	"version": "2.1.0",
	"description": "Set of rules for Petal's custom ESLint rules",
	"license": "Apache-2.0",
	"funding": "https://ko-fi.com/pauliesnug",
	"homepage": "https://petal.dyn.gay",
	"repository": {
		"type": "git",
		"url": "https://github.com/pulseflow/petal",
		"directory": "configs/eslint-petal"
	},
	"keywords": [
		"eslint",
		"eslint-plugin",
		"react",
		"typescript"
	],
	"main": "./build/index.js",
	"module": "./build/index.js",
	"types": "./types/index.d.ts",
	"files": [
		"!**/*.spec",
		"!**/*.test.*",
		"!**/*.ts.map",
		"!**/*.tsbuildinfo",
		"!**/docs/**/*",
		"!**/test/**/*",
		"!**/test/**/*",
		"!**/vendor/**/*",
		"CHANGELOG.md",
		"LICENSE",
		"README.md",
		"build/**/*",
		"types/**/*"
	],
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"build": "petal build",
		"test": "petal test",
		"lint": "petal lint",
		"clean": "rimraf build types"
	},
	"peerDependencies": {
		"eslint": "*"
	},
	"devDependencies": {
		"@types/eslint": "^8.56.0",
		"@types/lodash.merge": "^4.6.9",
		"@types/node": "^20.10.5",
		"@types/semver": "^7.5.5",
		"@typescript-eslint/rule-tester": "^6.16.0",
		"@typescript-eslint/typescript-estree": "^6.16.0",
		"@typescript-eslint/utils": "^6.16.0",
		"ajv": "^6.10.0",
		"eslint": "^8.56.0",
		"eslint-define-config": "^2.0.0",
		"lodash.merge": "^4.6.2",
		"rimraf": "^5.0.5",
		"typescript": "^5.3.3",
		"vitest": "^1.1.3"
	},
	"publishConfig": {
		"access": "public"
	}
}
